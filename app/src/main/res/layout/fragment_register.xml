<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="Inserisci le tue credenziali :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nomeutenteInputReg"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nomeInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:hint="Nome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputReg" />

    <EditText
        android:id="@+id/emailInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefonoInputReg" />

    <EditText
        android:id="@+id/cognomeInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:hint="Cognome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeInputReg" />

    <EditText
        android:id="@+id/passwordInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:hint="Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeutenteInputReg" />

    <Button
        android:id="@+id/confermaReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#89EF13"
        android:shadowRadius="20"
        android:text="Conferma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInputReg"
        app:layout_constraintVertical_bias="0.913" />

    <EditText
        android:id="@+id/nomeutenteInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:hint="Username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/telefonoInputReg"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:hint="Cellulare"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cognomeInputReg" />


    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="245dp"
        android:layout_height="155dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/confermaReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/emailInputReg"
        app:layout_constraintVertical_bias="0.282" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data di nascita :"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/confermaReg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInputReg"
        app:layout_constraintVertical_bias="0.398" />

    +
</androidx.constraintlayout.widget.ConstraintLayout>

